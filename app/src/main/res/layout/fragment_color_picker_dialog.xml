<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorPickerDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/color_picker_dialog_color_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/r_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/r_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <SeekBar
                android:id="@+id/r_seek_bar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255"
                android:progress="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/g_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/g_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <SeekBar
                android:id="@+id/g_seek_bar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255"
                android:progress="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <SeekBar
                android:id="@+id/b_seek_bar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255"
                android:progress="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/a_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <SeekBar
                android:id="@+id/a_seek_bar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255"
                android:progress="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/color_picker_negative_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/color_picker_negative_button_text" />

            <Button
                android:id="@+id/color_picker_positive_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/color_picker_positive_button_text" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>